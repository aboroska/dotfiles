# Make the simlinks for any OS
# Source it from the directory of the git repository 

D=`pwd`
ln -s $D/help ~/help
ln -s $D/bash_prompt ~/bash_prompt
ln -s $D/dot_erlang ~/.erlang
ln -s $D/dot_erlang.d ~/.erlang.d
ln -s $D/dot_tmux ~/.tmux.conf
ln -s $D/dot_bash_profile-common ~/.bash_profile
ln -s ~/.bash_profile ~/.bashrc
cat $D/dot_bash_profile-bsd >> ~/.bash_profile 
